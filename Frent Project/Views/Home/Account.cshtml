@using FRENT_Project.Models
@using Microsoft.AspNetCore.Identity
@model FRENT_Project.Models.User

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="~/CSS/Account.css" type="text/css">
    <title>FRENT | Account</title>
    <script
  src="https://code.jquery.com/jquery-3.6.0.js"
  integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk="
  crossorigin="anonymous"></script>
  </head>
<body>

    <nav class="nav">
        <div class="container">
            <div class="logo">
                <a asp-controller="Home" asp-action="Home">
                    <img src="~/Media/Logo_Home.png" alt="">
                </a>
            </div>
            <span class="search-bar">
                <input type="text" placeholder="Search For Partner" name="" id="">
                <a asp-controller="Home" asp-action="PartnerList"><img src="~/Media/Icon_search.png" alt=""></a>
            </span>
            <div id="mainListDiv" class="main_list">
                <ul class="navlinks">
                    <li>
                        <div class="nav-button">
                            <a asp-controller="Home" asp-action="Order"><img src="~/Media/Buy.png" alt=""></a>
                        </div>
                    </li>
                    <li>
                        <div class="nav-button">
                            <a asp-controller="Home" asp-action="ChatList"><img src="~/Media/Chat1.png" alt=""></a>
                        </div>
                    </li>
                    <li class="nav-button" id="nav-profile">
                        <div>
                            <a asp-controller="Home" asp-action="Profile"><img src="~/Media/Profile.png" alt=""></a>
                        </div>
                    </li>
                    <li class="nav-button">
                        <div class="nav-dropdown">
                            <img  src="~/Media/Drop.png" alt="">
                        </div>
                        <div class="dropped">
                            <a asp-controller="Home" asp-action="Settings2">Setting</a>
                            <a class="dropped-content2" asp-controller="Home" asp-action="ContactUS">Contact Us</a>
                            <a asp-controller="Home" asp-action="Index">Log Out</a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
        </nav>

    <div class="sidebar">
      <div class="sidebar-menu">
        <ul>
          <li>
            <a asp-controller="Home" asp-action="Profile">
              <span class="utama">Profile</span>
              <hr class="blabla">
            </a>
          </li>
          <li>
            <a class="#" href="#">
              <span>Account</span>
              <hr class="utama">
            </a>
          </li>
          </li>
        </ul>
      </div>
    </div>

   <div class="container-2"> 
        <form method="post">
            <label style="font-style: normal; font-weight: 400; font-size: 36px; color: #B3B3B3;" >Email</label>
            <input asp-for="Email" style="font-size: 15px;" type="email" class="form-control" id="email" name="email" placeholder="Email">
            <label style="font-style: normal; font-weight: 400; font-size: 36px; color: #B3B3B3;">Password</label>
            <input style="font-size: 15px;" type="password" class="form-control" id="password" name="password" placeholder="Password">
            <label style="font-style: normal; font-weight: 400; font-size: 36px; color: #B3B3B3;">Re-enter Password</label>
            <input style="font-size: 15px;" type="password" class="form-control" id="passwrodd" name="passwordd" placeholder="Re-enter Password">
            <label style="font-style: normal; font-weight: 400; font-size: 36px; color: #B3B3B3;">Gender</label>
            @if(Model.gender == null)
            {
                <select asp-for="gender" style="font-size: 10px;" class="custom-select" id="Gender" required>
                <option style="font-size: 15px;" value="" selected disabled>Choose...</option>
                <option style="font-size: 15px;" value="Male">Male</option>
                <option style="font-size: 15px;" value="Female">Female</option>
                </select>   
            }
            else if(Model.gender.Equals("Female"))
            {
                <select asp-for="gender" style="font-size: 10px;" class="custom-select" id="Gender" required>
                <option style="font-size: 15px;" value="Male" selected>Male</option>
                <option style="font-size: 15px;" value="Female">Female</option>
                </select>
            }
            else if(Model.gender.Equals("Male"))
            {
                <select asp-for="gender" style="font-size: 10px;" class="custom-select" id="Gender" required>
                <option style="font-size: 15px;" value="Male">Male</option>
                <option style="font-size: 15px;" value="Female" selected>Female</option>
                </select>
            }
            <label style="font-style: normal; font-weight: 400; font-size: 36px; color: #B3B3B3;">Phone Number</label>
            <input asp-for="PhoneNumber" style="font-size: 15px;" type="text" class="form-control" id="Phone" name="Phone" placeholder="+62">
            <label style="font-style: normal; font-weight: 400; font-size: 36px; color: #B3B3B3;">City</label>
            <input asp-for="city" style="font-size: 15px;" type="text" class="form-control" id="location" name="location" placeholder="City">
             <button type="submit" class="btn" style="color: #ffff; font-size: 30px;">Save</button>
          </form>
          
   </div>

</body>

<footer>
    <div class="social-media-footer">
        <a href="https://www.facebook.com"><img src="~/Media/FB.png" alt=""></a>
